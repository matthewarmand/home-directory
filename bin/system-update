#!/bin/bash

require_dependency() {
  if ! command -v "$1" > /dev/null; then
    echo "$1 is required"
    exit 1
  fi
}

bold_message() {
  echo -e "\033[1m$1\033[0m"
}

# check for dependencies
require_dependency yay
require_dependency pacdiff
require_dependency arch-audit

# Check news. This is inefficient and hacky right now.
# If I can find a way to skip the confirmation if no news WHILE preserving the pretty print of the news, we'll change it
# Also, I'd love to smart-parse the news... we'll see how feasible that is another day
# This would scan for "manual intervention" blocks and ignore them if not installed. Prints all else
if [ -n "$(yay -Pw)" ]; then
  yay -Pw
  echo
  bold_message "Check above news for relevant manual interventions. Ready to continue? [y] "
  while true; do
    read -r yn
    case $yn in
      [Yy]* ) break;;
      * ) echo "Enter y when ready to continue.";;
    esac
  done
fi

# Check security audit for fixed packages; this may make the upgrade more urgent/desirable
arch-audit -u

# Full system update
yay -Syu

# Remove any orphaned packages
(yay -Qtdq && yay -Rns "$(yay -Qtdq)") || true

# Interactively resolve configuration files
sudo pacdiff

# Check for kernel upgrade; request restart
if [ "$(uname -r)" != "$(yay -Q linux | awk '{print $2}' | sed 's/\.arch/-arch/')" ]; then
  echo
  bold_message "Kernel has been upgraded; reboot now? [y/n] "
  while true; do
    read -r yn
    case $yn in
      [Yy]* ) reboot;;
      [Nn]* ) break;;
      * ) echo "Please answer y or n.";;
    esac
  done
fi
